@model IEnumerable<PF.Models.Factura>

<h2>Lista de Facturas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Productos</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var factura in Model)
        {
            <tr>
                <td>@factura.Cliente.Nombres @factura.Cliente.Apellidos</td>
                <td>@factura.Fecha.ToShortDateString()</td>
                <td>
                    @foreach (var detalle in factura.FacturaDetalles)
                    {
                        <span>@detalle.Producto.Name</span><br />
                    }
                </td>
                <td>@factura.Total.ToString("C")</td>
                <td>@Html.ActionLink("Detalles", "Details", new { id = factura.idFactura }, new { @class = "btn btn-info btn-sm" })</td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Crear Nueva Factura", "Create", null, new { @class = "btn btn-primary" })
</p>
